{
  "$schema": "https://raw.githubusercontent.com/tikked/tikked/main/packages/tikked-persistency/ApplicationEnvironment.json",
  "name": "Project System",
  "contextSchema": {
    "attributes": [
      {
        "id": "userId",
        "name": "User Id",
        "description": "The id of the user (mongo id)"
      },
      {
        "id": "projectId",
        "name": "Project Id",
        "description": "The id of the project (mongo id)"
      }
    ]
  },
  "description": "",
  "featureFlags": [
    {
      "id": "kanban",
      "name": "Kanban Module",
      "description": "Indicates whether the Kanban module is available",
      "toggles": [
        {
          "matcher": {
            "$superset": {
              "userId": "1"
            }
          },
          "isActive": true
        },
        {
          "matcher": {
            "$superset": {
              "projectId": "1"
            }
          },
          "isActive": true
        },
        {
          "matcher": {
            "$regex": {
              "userId": ".*"
            }
          },
          "isActive": true
        },
        {
          "matcher": {
            "$superset": {}
          },
          "isActive": false
        }
      ]
    },
    {
      "id": "burndown",
      "name": "Burndown Module",
      "description": "Indicates whether the Burndown module is available",
      "toggles": [
        {
          "matcher": {
            "$superset": {}
          },
          "isActive": true
        }
      ]
    },
    {
      "id": "sprint",
      "name": "Sprint Module",
      "description": "Indicates whether the Sprint module is available",
      "toggles": [
        {
          "matcher": {
            "$superset": {
              "userId": "1",
              "projectId": "1"
            }
          },
          "isActive": true
        },
        {
          "matcher": {
            "$superset": {}
          },
          "isActive": false
        }
      ]
    }
  ]
}
